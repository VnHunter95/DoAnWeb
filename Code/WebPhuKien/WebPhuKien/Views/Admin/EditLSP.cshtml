@model WebPhuKien.Models.LOAISANPHAM

@{
    ViewBag.Title = "EditLSP";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Điều chỉnh loại sản phẩm</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">        
        <hr />
        @Html.ValidationSummary(true)
        @Html.DisplayNameFor(model => model.Idloai)

        <div class="form-group">
            @Html.LabelFor(model => model.Tenloai, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tenloai)
                @Html.ValidationMessageFor(model => model.Tenloai)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về trang điều chỉnh", "LoaiSP")
</div>
