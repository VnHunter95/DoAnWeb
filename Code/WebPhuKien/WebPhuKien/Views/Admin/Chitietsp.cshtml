@model WebPhuKien.Models.SANPHAM

@{
    ViewBag.Title = "Chitietsp";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Chi Tiết Sản Phẩm</h2>

<div>
	<hr />
    <dl class="dl-horizontal">
        <dt>
            ID Sản Phẩm: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Idsp)
        </dd>

        <dt>
           Nhà Sản Xuất:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NHASANXUAT.Tennsx)
        </dd>

        <dt>
            Loai:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LOAISANPHAM.Tenloai)
        </dd>

        <dt>
            Tên Sản Phẩm:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tensanpham)
        </dd>

        <dt>
            Thông Tin:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Thongtin)
        </dd>

        <dt>
           Số Lượng Tồn: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Soluongcon)
        </dd>

        <dt>
            Đơn Giá: 
        </dt>

        <dd>
            @String.Format("{0:0,0}",Model.Dongia) Vnđ
        </dd>

        <dt>
            Hình:
        </dt>

        <dd>
            <img src="@Url.Content("~/Hinhsanpham/"+Model.Hinhanh)" height="200px" width="200px" />
        </dd>

        <dt>
            Ngày cập nhật:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ngaycapnhat)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Điều Chỉnh", "Suasp", new { id = Model.Idsp }) |
    @Html.ActionLink("Trở Về", "Sanpham")
</p>
