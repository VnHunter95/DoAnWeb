@using WebPhuKien.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<WebPhuKien.Models.BANNER>
@{
    ViewBag.Title = "Banner";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Danh sách Banner</h2>
<table class="table" border="1">
    <tr>
        <td> Banner </td>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@Url.Content("~/Banner/"+item.Banner1)" height="250px" width="400px" />
        </td>
        <td>
            @Html.ActionLink("Xóa", "Xoabanner", new { banner=item.Banner1 })
        </td>
    </tr>
}

</table>
<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("Banner", new { page = page }))
</div>
<hr />
@using (Html.BeginForm("Banner", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <h3>Thêm Banner Mới</h3>
    <br />
    <input type="file" name="fileupload" />
    <br />
    <input type="submit" value="Upload" />
}
<style>
    .MenuTrang li {
        display: inline;
    }
</style>