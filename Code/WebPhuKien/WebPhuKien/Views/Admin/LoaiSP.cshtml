@model IEnumerable<WebPhuKien.Models.LOAISANPHAM>

@{
    ViewBag.Title = "LoaiSP";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quản lý Loại Sản phẩm</h2>

<p>
    <button type="button">
        @Html.ActionLink("Thêm mới", "CreateLSP")
    </button>
</p>
<table class="table">
    <tr>
        <th style="text-align:center">
            Tên loại
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Tenloai)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "EditLSP", new { idloai =item.Idloai }) |
            @Html.ActionLink("Chi tiết", "DetailsLSP", new { idloai =item.Idloai }) |
            @Html.ActionLink("Xóa", "DeleteLSP", new { idloai =item.Idloai })
        </td>
    </tr>
}

</table>
