@model WebPhuKien.Models.LOAISANPHAM

@{
    ViewBag.Title = "DeleteLSP";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Xóa loại</h2>
<font color="red">@ViewBag.ThongBao</font>
<h3><font color="red">Có chắc chắn muốn xóa vĩnh viễn loại này?</font></h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên loại muốn xóa:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tenloai)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Trở về trang trước", "LoaiSP")
        </div>
    }
</div>
