@using WebPhuKien.Models
@using PagedList.Mvc;
@model PagedList.PagedList<SANPHAM>
@{
    ViewBag.Title = "SPTheoLoai";
    Layout = "~/Views/Shared/_LayoutPageUser.cshtml";
}

<h3 style="text-align:center; color:red;">SẢN PHẨM THEO LOẠI</h3>
@foreach (var SANPHAM in Model)
{

    <div class="col-sm-4 col-lg-4 col-md-4">
        <div>
            <a href="@Url.Action("ChiTiet", "PhuKien", new {id = SANPHAM.Idsp})">
                <img alt="@SANPHAM.Tensanpham" src="~/Hinhsanpham/@SANPHAM.Hinhanh" width="100%" height="280" />
            </a>
            <div class="caption">
                <p>
                    <h4><a href="@Url.Action("ChiTiet", "PhuKien", new { id = SANPHAM.Idsp })">@SANPHAM.Tensanpham</a></h4>
                    <h5><b>@String.Format("{0:0,0}", SANPHAM.Dongia) vnđ</b></h5>
                </p>
                <p>
                    @Html.Raw(SANPHAM.Thongtin)
                </p>
            </div>
                <div class="uname">
                    <p style="text-align:right; padding-right:10px;"><a href="@Url.Action("Chitiet", "PhuKien" , new { id=SANPHAM.Idsp })">Chi tiết</a> | <a href="@Url.Action("ThemGiohang", "Giohang", new { @Masp = SANPHAM.Idsp })">Thêm giỏ hàng</a></p>
                </div>
        </div>
    </div>

}

<div class="MenuTrang">
@Html.PagedListPager(Model, page => Url.Action("SPTheoLoai", new {page = page }))
</div>
<style>
    .MenuTrang li {
        display: inline;
    }
</style>